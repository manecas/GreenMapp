<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="260dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/parque"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom"
        android:background="#80000000">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageButton"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="0dp" />

    </LinearLayout>
</FrameLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"
    android:scrollbarStyle="insideOverlay">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="Nome do Parque"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Descrição do Parque" />

        <Space android:layout_height="10dip"
            android:layout_width="wrap_content" />

        <Switch
            android:text="WC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" />

        <Switch
            android:text="Bancos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch2" />

        <Switch
            android:text="Caixotes de Lixo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch3" />

        <Switch
            android:text="Permitido Animais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch4" />

        <Switch
            android:text="Zona de Exercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch5" />

        <Switch
            android:text="Zona de Bicicletas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch6" />

        <Switch
            android:text="Rio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch7" />

        <Switch
            android:text="Churrasco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch8" />

        <Switch
            android:text="Mar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch9" />

        <Switch
            android:text="Sombras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch10" />

        <Switch
            android:text="Zona de Desporto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch11" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch12"
            android:text="Zona Cultural" />

        <Switch
            android:text="WC infantil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch13" />

        <Switch
            android:text="Acesso para Deficientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch14" />

        <Switch
            android:text="Parque Infantil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch15" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/adicionar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnformate"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="14dp"
            android:text="Adicionar"
            android:textSize="16dp"
            android:textColor="#fff"
            />

    </LinearLayout>
</ScrollView>

</LinearLayout>